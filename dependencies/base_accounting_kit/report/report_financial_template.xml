<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_financial">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-set="data_report_margin_top" t-value="12"/>
                <t t-set="data_report_header_spacing" t-value="9"/>
                <t t-set="data_report_dpi" t-value="110"/>
                <style>
                   .financial_report_container {
                        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
                        background-color: white;
                        font-size: 16px;
                        border-radius: 5px;
                        padding: 24px;
                        width: 100%;
                    }

                    table, tbody, thead, tr, th, td {
                        border: none;
                    }

                    .financial_report_table {
                        width: 100%;
                        border-collapse: collapse;
                    }

                    .financial_report_table thead th {
                        font-weight: 500;
                        padding-bottom: 16px;

                    }

                    .financial_report_date_box {
                        padding: 6px 12px;
                        font-size: 14px;
                        font-weight: normal;
                        border: 1px solid #E5E7EB;
                        width: 100%;
                        margin-bottom: 10px;
                    }
                    .financial_report_table thead th span {
                        font-weight: 600;
                    }

                    .financial_report_table tbody tr.highlighted {
                        background-color: #CCCED1;
                    }

                    .financial_report_table td {
                        padding: 5px 18px;
                    }

                    .financial_report_table tr.bold  {
                        font-weight: 600;
                    }

                    .financial_report_table tbody tr  {
                        border-bottom: 1px solid #E5E7EB;
                    }
                    .financial_report_balance_value {
                        text-align: center;
                        min-width: 100px;
                    }
                </style>
                <div class="page">

                    <!-- New implementation -->
                    <div class="financial_report_container">
                        <table class="financial_report_table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        <div class="financial_report_date_box">
                                            <t t-if="data.get('form', {}).get('date_from') and data.get('form', {}).get('date_to')">
                                                <span t-esc="data.get('form', {}).get('date_from', '')"/>
                                                <span style="margin: 0 3px;">:</span>
                                                <span t-esc="data.get('form', {}).get('date_to', '')"/>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="report_year"/>
                                            </t>
                                        </div>
                                        <span t-esc="balance_label"/>
                                    </th>
                                    <t t-if="data.get('form', {}).get('comparison_context')">
                                        <th >
                                            <div class="financial_report_date_box">
                                                <span t-esc="data.get('form', {}).get('comparison_context', {}).get('date_from', '')"/>
                                                <span style="margin: 0 3px;">:</span>
                                                <span t-esc="data.get('form', {}).get('comparison_context', {}).get('date_to', '')"/>
                                            </div>
                                            <span t-esc="balance_label"/>
                                        </th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="report_lines" t-key="line.get('id', '') + line.get('name', '')" t-as="line">
                                    <t t-if="line.get('level', 0) != 0">
                                        <t t-set="line_level" t-value="line.get('level') or 1"/>

                                        <t t-set="is_highlighted" t-value="line_level == 2"/>
                                        <t t-set="is_bold" t-value="line_level == 3"/>
                                        <t t-set="indent_px" t-value="(line_level - 1) * 20"/>
                                        <t t-set="lang" t-value="data.get('form', {}).get('used_context', {}).get('lang') or 'en_US'"/>
                                        <t t-set="lang_parts" t-value="lang.split('_') if lang else ['en']"/>
                                        <t t-set="lang_base" t-value="lang_parts[0] if lang_parts else 'en'"/>
                                        <t t-set="rtl_langs" t-value="['ar', 'he', 'fa', 'ur', 'yi', 'ji']"/>
                                        <t t-set="is_rtl" t-value="lang_base in rtl_langs"/>
                                        <t t-set="padding_style" t-value="'padding-right: %spx;' % indent_px if is_rtl else 'padding-left: %spx;' % indent_px"/>

                                        <t t-set="row_class" t-value="''"/>
                                        <t t-if="is_highlighted">
                                            <t t-set="row_class" t-value="'highlighted'"/>
                                        </t>
                                        <t t-if="is_bold">
                                            <t t-set="row_class" t-value="(row_class + ' bold') if row_class else 'bold'"/>
                                        </t>
                                        <tr t-att-class="row_class">
                                            <td t-att-style="padding_style">
                                                <span t-esc="line.get('name', '')"/>
                                            </td>
                                            <td class="financial_report_balance_value">
                                                <span t-esc="line.get('balance', 0.0)"/>
                                            </td>
                                            <t t-if="data.get('form', {}).get('comparison_context')">
                                                <td class="financial_report_balance_value">
                                                    <span t-esc="line.get('balance_cmp', 0.0)"/>
                                                </td>
                                            </t>
                                        </tr>

                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
