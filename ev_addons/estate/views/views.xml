<odoo>
    <record id="view_estate_property_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Estate Property" decoration-success="state == 'offer_accepted'" decoration-info="offer_ids" decoration-muted="state == 'sold'">
                <field name="name" />
                <field name="type_id" />
                <!-- <field name="description" /> -->
                <field name="postcode" />
                <field name="date_availability" optional="hide" />
                <field name="expected_price" optional="show" />
                <field name="selling_price" optional="show" />
                <field name="bedrooms" />
                <field name="offer_ids" />
                <field name="living_area" optional="show" />
            </list>
        </field>
    </record>
    <!-- decoration-success="'accepted' in offer_ids.mapped(status)" decoration-success="len(offer_ids) &gt; 0" decoration-bf="'accepted' in offer_ids.mapped(status)" -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button type="object" string="Sell" name="sell_property" class="btn btn-primary" invisible="(state == 'sold' or state == 'canceled')" />
                    <button type="object" string="Cancel" name="cancel_property" invisible="(state == 'sold' or state == 'canceled')" />
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received, offer_accepted, sold,canceled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="type_id" options="{'no_create': True}"/>
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_offer" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" invisible="not garden" />
                                <field name="garden_orientation" invisible="not garden" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" editable="top" />
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field string="Salesperson" name="salesperson_id" />
                                    <field string="Buyer" name="buyer_id" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="type_id" />
                <!-- <field name="description" /> -->
                <field name="postcode" />
                <!-- <filter string="New" name="new" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" /> -->
                <filter string="State" name="state" context="{'group_by':'state'}" />
            </search>
        </field>
    </record>


    <record id="esate_offer_form" model='ir.ui.view'>
        <field name="name">Estate Offer Form View</field>
        <field name="model">estate.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="validity"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="deadline"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="esate_type_form" model='ir.ui.view'>
        <field name="name">Estate Type Form View</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate.action_estate_offer)d" type="action" class="oe_stat_button" icon="fa-briefcase">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="property_ids"/>
                        <!-- <field name="offer_ids"/>
                        <field name="offer_count"/> -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="esate_offer_list" model='ir.ui.view'>
        <field name="name">Estate Offer List View</field>
        <field name="model">estate.offer</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="deadline"/>
                <button name="confirm_offer" string="Confirm" type="object" icon="fa-check" invisible="status" />
                <button name="refuse_offer" string="Refuse" type="object" icon="fa-times" invisible="status" />
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="esate_type_list" model='ir.ui.view'>
        <field name="name">Estate Type List View</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="property_ids"/>
            </list>
        </field>
    </record>

    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" disable_drag_drop="1">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_card_content">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                Expected Price: 
                                <b>
                                    <field name="expected_price"/>
                                </b>
 -
                            <span t-if="record.state.raw_value  == 'offer_received'">
                                  Best Offer: 
                                <b>
                                    <field name="best_offer"/>
                                </b>
                            </span>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_accepted'" style="margin: 10px 0;">
                                Selling Price: 
                                <b>
                                    <field name="selling_price"/>
                                </b>
                            </div>

                            <div style="margin: 10px 0;">
                                <field name="tags_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>